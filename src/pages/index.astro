---
import Header from "../components/UI/header.astro";
import truck from "../assets/images/truck.png";
import spare from "../assets/images/spare.png";
import car from "../assets/images/car.png";
import accessory from "../assets/images/accessory.png";
import oil from "../assets/images/oil.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <title>Astro</title>
  </head>
  <body>
    <Header />

    <main>
      <section class="pt-[230px]">
        <div class="container mx-auto">
          <div class="flex items-start">
            <div>
              <h1
                class="mb-[16px] text-[#333333] text-[60px] w-[540px] font-bold leading-[76px] tracking-[0%] pt-[20px]"
              >
                Affordable truck service
              </h1>
              <p
                class="text-[#333333CC] text-[18px] w-[480px] mb-[32px] leading-[22px]"
              >
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc
                odio in et, lectus sit lorem id integer.
              </p>
              <button
                class="bg-[#4762FF] font-semibold text-white py-[11px] px-[37px] rounded-[8px] hover:bg-[#4763ffa5]"
                >Чета сделать</button
              >
            </div>
            <div>
              <img src={truck.src} alt="truck" />
            </div>
          </div>
        </div>
      </section>

      
    </main>
  </body>
</html>

<style>
  main {
    min-height: calc(100vh - 70px - 0px);
  }
</style>
